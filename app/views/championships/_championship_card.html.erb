<div class="card mb-4">
  <div class="card-body">
    <h2 class="card-title"><%= link_to championship.name, championship %></h2>

    <% championship.users.each do |user| %>
      <p class="card-text"><strong>Username:</strong> <%= user.username %></p>
    <% end %>

    <% if user_signed_in? %>
      <% if current_user.championships.include?(championship) %>
        <%= link_to "Ver Torneo", championship, class: 'btn btn-success', 'data-turbo-frame': 'championships' %>
      <% else %>
        <%= link_to "Unirse al Torneo", join_championship_path(championship), method: :post, class: 'btn btn-primary', remote: true, 'data-turbo-frame': 'championships' %>
      <% end %>
    <% end %>
  </div>
</div>
