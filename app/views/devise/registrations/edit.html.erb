<div class="container">
  <div class="row justify-content-center">
    <div class="col-12 col-sm-8 col-md-6 col-lg-4">
      <div class="card">
        <div class="card-body">
          <h2 class="mb-3 text-center">Edit <%= resource_name.to_s.humanize %></h2>

          <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put, multipart: true }) do |f| %>
            <%= render "devise/shared/error_messages", resource: resource %>

            <div class="form-group">
              <%= f.label :Email %><br>
              <%= f.email_field :email, autocomplete: "email", class: "form-control" %>
            </div>

            <div class="form-group">
              <%= f.label :Nombre %><br>
              <%= f.text_field :name, autocomplete: "name", class: "form-control" %>
            </div>

            <div class="form-group">
              <%= f.label :Nombre_golfistico %><br>
              <%= f.text_field :username, autocomplete: "username", class: "form-control" %>
            </div>

            <div class="form-group">
              <%= f.label :selfie %><br>
              <%= f.file_field :image, accept: 'image/png, image/jpeg', class: "form-control" %>
            </div>

            <div class="form-group">
              <%= f.label :nueva_Contrase침a %> <i>(Solo si se desea)</i><br>
              <%= f.password_field :password, autocomplete: "new-password", class: "form-control" %>
            </div>

            <div class="form-group">
              <%= f.label :confimaci칩n_nueva_contrase침a %><br>
              <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "form-control" %>
            </div>

            <hr><br>

            <div class="form-group">
              <%= f.label :contrase침a_actual %> <i>(OBLIGATORIO)</i><br>
              <%= f.password_field :current_password, autocomplete: "current-password", class: "form-control" %>
            </div>

            <div class="actions text-center mt-3">
              <%= f.submit "Update", class: "btn btn-primary mb-3" %>
            </div>
          <% end %>

          <div class="text-center">
            <%= button_to "Eliminar Cuenta", registration_path(resource_name), data: { confirm: "Are you sure?", turbo_confirm: "Are you sure?" }, method: :delete, class: "btn btn-danger" %>
          </div>

          <%= link_to "Volver", :back, class: "btn btn-secondary mt-3" %>
        </div>
      </div>
    </div>
  </div>
</div>
