<div class="container">
  <div class="row justify-content-center">
    <div class="col-12 col-sm-8 col-md-6 col-lg-4">
      <div class="card">
        <div class="card-body">
          <h2 class="mb-3 text-center">Registrarse</h2>

          <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :post, multipart: true }) do |f| %>

            <%= render "devise/shared/error_messages", resource: resource %>

            <div class="form-group">
              <%= f.label :Email %><br>
              <%= f.email_field :email, autofocus: true, placeholder: "Rory@gmail.com", required: true, class: "form-control #{'is-invalid' if resource.errors.include?(:email)}" %>
              <% if resource.errors.include?(:email) %>
                <div class="invalid-feedback">
                  <%= resource.errors.full_messages_for(:email).join(', ') %>
                </div>
              <% end %>
            </div>

            <div class="row">
              <div class="form-group col-12">
                <%= f.label :Nombre %><br>
                <%= f.text_field :name, autofocus: true, placeholder: "Rory Mcllroy", required: true, class: "form-control #{'is-invalid' if resource.errors.include?(:name)}" %>
                <% if resource.errors.include?(:name) %>
                  <div class="invalid-feedback">
                    <%= resource.errors.full_messages_for(:name).join(', ') %>
                  </div>
                <% end %>
              </div>
            </div>

            <div class="form-group">
              <%= f.label :Nombre_golfistico %><br>
              <%= f.text_field :username, autofocus: true, placeholder: "Rors", required: true, class: "form-control #{'is-invalid' if resource.errors.include?(:username)}" %>
              <% if resource.errors.include?(:username) %>
                <div class="invalid-feedback">
                  <%= resource.errors.full_messages_for(:username).join(', ') %>
                </div>
              <% end %>
            </div>

            <div class="form-group">
              <%= f.label :handicap %><br>
              <%= f.select :handicap, (0..40).to_a, { prompt: 'Select handicap' }, class: "form-control #{'is-invalid' if resource.errors.include?(:handicap)}" %>
              <% if resource.errors.include?(:handicap) %>
                <div class="invalid-feedback">
                  <%= resource.errors.full_messages_for(:handicap).join(', ') %>
                </div>
              <% end %>
            </div>

            <div class="form-group">
              <%= f.label :selfie %><br>
              <%= f.file_field :image, autofocus: true, required: true, accept: 'image/png, image/jpeg', class: "form-control #{'is-invalid' if resource.errors.include?(:image)}" %>
              <% if resource.errors.include?(:image) %>
                <div class="invalid-feedback">
                  <%= resource.errors.full_messages_for(:image).join(', ') %>
                </div>
              <% end %>
            </div>

            <div class="form-group">
              <%= f.label :contraseÃ±a %><br>
              <%= f.password_field :password, autocomplete: "new-password", required: true, class: "form-control #{'is-invalid' if resource.errors.include?(:password)}" %>
              <% if resource.errors.include?(:password) %>
                <div class="invalid-feedback">
                  <%= resource.errors.full_messages_for(:password).join(', ') %>
                </div>
              <% end %>
            </div>

            <div class="form-group">
              <%= f.label :confirmar_contraseÃ±a %><br>
              <%= f.password_field :password_confirmation, autocomplete: "new-password", required: true, class: "form-control #{'is-invalid' if resource.errors.include?(:password_confirmation)}" %>
              <% if resource.errors.include?(:password_confirmation) %>
                <div class="invalid-feedback">
                  <%= resource.errors.full_messages_for(:password_confirmation).join(', ') %>
                </div>
              <% end %>
            </div>

            <div class="actions text-center mt-3">
              <%= f.submit "Registrarse", class: "btn btn-primary mb-3" %>
            </div>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>
